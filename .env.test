# Test Environment Configuration
# Used by Jest and testing frameworks

NODE_ENV=test
NEXTAUTH_SECRET=test-secret-12345
NEXTAUTH_URL=http://localhost:3000

# Mock API Keys (Safe for testing)
RAPIDAPI_KEY=test-rapidapi-key-12345
OPENAI_API_KEY=test-openai-key-12345
PERPLEXITY_API_KEY=test-perplexity-key-12345

# Mock Database URLs (Not used in tests due to mocking)
SUPABASE_URL=https://test-project.supabase.co
SUPABASE_ANON_KEY=test-anon-key-12345

# Mock Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379

# Mock Salesforce Configuration
SALESFORCE_LOGIN_URL=https://test.salesforce.com
SALESFORCE_USERNAME=test@example.com
SALESFORCE_PASSWORD=testpassword
SALESFORCE_SECURITY_TOKEN=testsecuritytoken

# Test-specific Configuration
JEST_TIMEOUT=30000
PLAYWRIGHT_TIMEOUT=60000
TEST_COVERAGE_THRESHOLD=70

# Disable external service calls in tests
DISABLE_EXTERNAL_APIS=true
MOCK_EXTERNAL_SERVICES=true

# Test Data Configuration
USE_MOCK_DATA=true
GENERATE_COVERAGE_REPORT=true