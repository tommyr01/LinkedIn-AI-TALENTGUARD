# Production Environment Configuration
# DO NOT commit this file to version control
# Copy to .env.production and fill with actual values

# Domain Configuration
DOMAIN=talentguard.app
NEXTAUTH_URL=https://talentguard.app
LETSENCRYPT_EMAIL=admin@talentguard.com

# Database Configuration
POSTGRES_DB=talentguard_prod
POSTGRES_PASSWORD=your_secure_postgres_password_here

# Redis Configuration
REDIS_PASSWORD=your_secure_redis_password_here

# Authentication
JWT_SECRET=your_jwt_secret_here_minimum_32_characters
NEXTAUTH_SECRET=your_nextauth_secret_here_minimum_32_characters

# Supabase Configuration (Production)
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# API Keys (Production)
OPENAI_API_KEY=sk-your_openai_key_here
PERPLEXITY_API_KEY=pplx-your_perplexity_key_here
RAPIDAPI_KEY=your_rapidapi_key_here

# Monitoring
GRAFANA_PASSWORD=your_grafana_admin_password_here

# Email Configuration (for notifications)
SMTP_HOST=smtp.your-provider.com
SMTP_PORT=587
SMTP_USER=your-email@your-domain.com
SMTP_PASSWORD=your_email_password_here
SMTP_FROM=noreply@talentguard.com

# Analytics
GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
POSTHOG_API_KEY=phc_your_posthog_key_here

# Feature Flags
ENABLE_ANALYTICS=true
ENABLE_ERROR_REPORTING=true
ENABLE_PERFORMANCE_MONITORING=true

# Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=900000

# File Upload
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=.pdf,.doc,.docx,.txt,.csv

# Security Headers
SECURITY_HEADERS_ENABLED=true
CSP_REPORT_URI=https://your-csp-reporting-endpoint.com

# Database Connection Pool
DATABASE_MAX_CONNECTIONS=20
DATABASE_MIN_CONNECTIONS=5