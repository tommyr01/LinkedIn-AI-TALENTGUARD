# TalentGuard Buyer Intelligence - Environment Variables Template
# Copy this file to .env.local and update with your actual values

# ==============================================
# APPLICATION SETTINGS
# ==============================================
NODE_ENV=development
NEXT_TELEMETRY_DISABLED=1

# ==============================================
# DATABASE CONFIGURATION
# ==============================================
# Supabase (Production) - Replace with your Supabase project details
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/talentguard
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key

# Local PostgreSQL (Docker) - Used when running in containers
LOCAL_DATABASE_URL=postgresql://postgres:postgres@postgres:5432/talentguard

# ==============================================
# REDIS CONFIGURATION
# ==============================================
# Redis URL - Local (Docker) and Production
REDIS_URL=redis://redis:6379
# For non-Docker development
# REDIS_URL=redis://localhost:6379

# ==============================================
# AUTHENTICATION & SECURITY
# ==============================================
# JWT Secret - Generate a secure random string
JWT_SECRET=your-very-secure-jwt-secret-key-here
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-nextauth-secret-here

# ==============================================
# LINKEDIN INTEGRATION (RapidAPI)
# ==============================================
RAPIDAPI_KEY=your-rapidapi-key
RAPIDAPI_HOST=linkedin-api8.p.rapidapi.com

# LinkedIn Scraper API
LINKEDIN_SCRAPER_API_KEY=your-linkedin-scraper-api-key

# ==============================================
# AI SERVICES
# ==============================================
# OpenAI API
OPENAI_API_KEY=your-openai-api-key

# Perplexity API
PERPLEXITY_API_KEY=your-perplexity-api-key

# ==============================================
# AIRTABLE INTEGRATION
# ==============================================
AIRTABLE_API_KEY=your-airtable-api-key
AIRTABLE_BASE_ID=your-airtable-base-id

# ==============================================
# SALESFORCE INTEGRATION
# ==============================================
SALESFORCE_CLIENT_ID=your-salesforce-client-id
SALESFORCE_CLIENT_SECRET=your-salesforce-client-secret
SALESFORCE_USERNAME=your-salesforce-username
SALESFORCE_PASSWORD=your-salesforce-password
SALESFORCE_SECURITY_TOKEN=your-salesforce-security-token
SALESFORCE_LOGIN_URL=https://login.salesforce.com

# ==============================================
# WEB RESEARCH SERVICE
# ==============================================
# Company data research APIs
COMPANY_RESEARCH_API_KEY=your-company-research-api-key

# ==============================================
# EMAIL NOTIFICATIONS
# ==============================================
# SMTP Configuration (optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-email-password

# ==============================================
# MONITORING & LOGGING
# ==============================================
# Optional: Add monitoring service API keys
LOG_LEVEL=info
SENTRY_DSN=your-sentry-dsn

# ==============================================
# DOCKER-SPECIFIC VARIABLES
# ==============================================
# These are used by docker-compose.yml
COMPOSE_PROJECT_NAME=talentguard-buyer-intelligence

# Development port overrides (optional)
APP_PORT=3000
REDIS_PORT=6379
POSTGRES_PORT=5432
REDIS_COMMANDER_PORT=8081
PGADMIN_PORT=8080

# ==============================================
# FEATURE FLAGS
# ==============================================
# Enable/disable specific features during development
ENABLE_LINKEDIN_SCRAPING=true
ENABLE_AI_ANALYSIS=true
ENABLE_QUEUE_WORKERS=true
ENABLE_AIRTABLE_SYNC=true
ENABLE_SALESFORCE_SYNC=true

# ==============================================
# DEVELOPMENT SETTINGS
# ==============================================
# Debug modes
DEBUG_LINKEDIN_API=false
DEBUG_QUEUE_PROCESSING=false
DEBUG_AI_PROCESSING=false

# Rate limiting
LINKEDIN_API_RATE_LIMIT=100
OPENAI_API_RATE_LIMIT=60

# ==============================================
# NOTES FOR DOCKER DEVELOPMENT
# ==============================================
# When running with Docker Compose:
# - Use service names (redis, postgres) instead of localhost
# - DATABASE_URL should use 'postgres' as hostname
# - REDIS_URL should use 'redis' as hostname
# - The application will be available at http://localhost:3000
# - Redis Commander: http://localhost:8081
# - pgAdmin: http://localhost:8080 (when using --profile tools)